<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!--  This is a copy of Vanilla Expanded Ancients VFEA_RegrowingPart-->

<HediffDef>
    <defName>Hediff_RegrowLimb</defName>
    <defaultLabelColor>(0.15, 0.6, 0.2)</defaultLabelColor>
    <description>This body part is regenerating.</description>
    <isBad>false</isBad>
    <label>regenerating</label>
    <maxSeverity>1</maxSeverity>
	<hediffClass>DeathRestRegrowsLimbs.Hediff_RegrowLimb</hediffClass>
    <stages>
      <li>
        <label>bones</label>
        <becomeVisible>true</becomeVisible>
        <partEfficiencyOffset>-1.0</partEfficiencyOffset>
        <painOffset>0.1</painOffset>
        <statOffsets>
          <PawnBeauty>-2</PawnBeauty>
        </statOffsets>
      </li>
      <li>
        <label>muscles</label>
        <becomeVisible>true</becomeVisible>
        <partEfficiencyOffset>-1.0</partEfficiencyOffset>
        <minSeverity>0.1</minSeverity>
        <painOffset>0.2</painOffset>
        <statOffsets>
          <PawnBeauty>-2</PawnBeauty>
        </statOffsets>
      </li>
      <li>
        <label>nerves</label>
        <becomeVisible>true</becomeVisible>
        <partEfficiencyOffset>-0.75</partEfficiencyOffset>
        <minSeverity>0.5</minSeverity>
        <painOffset>0.5</painOffset>
        <statOffsets>
          <PawnBeauty>-2</PawnBeauty>
        </statOffsets>
      </li>
      <li>
        <label>skin</label>
        <becomeVisible>true</becomeVisible>
        <partEfficiencyOffset>-0.5</partEfficiencyOffset>
        <minSeverity>0.75</minSeverity>
        <painOffset>0.2</painOffset>
        <statOffsets>
          <PawnBeauty>-1</PawnBeauty>
        </statOffsets>
      </li>
      <li>
        <label>finishing</label>
        <becomeVisible>true</becomeVisible>
        <partEfficiencyOffset>0</partEfficiencyOffset>
        <minSeverity>1</minSeverity>
        <painOffset>0.05</painOffset>
        <statOffsets>
          <PawnBeauty>-1</PawnBeauty>
        </statOffsets>
      </li>
    </stages>
  </HediffDef>
  
 </Defs>